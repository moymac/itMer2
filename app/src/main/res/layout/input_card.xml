<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/input_relative_layout"
    android:clickable="false"
    android:layout_width="wrap_content" android:layout_height="wrap_content">


    <jp.wasabeef.richeditor.RichEditor
        android:id="@+id/editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="2dp"
        android:layout_below="@id/input_content_video"
        android:layout_margin="2dp"
        android:visibility="visible"
        />

    <EditText
        android:id="@+id/input_content_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:maxWidth="300dp"
        android:padding="2dp"
        android:layout_below="@id/input_content_video"
        android:layout_margin="2dp"
        android:visibility="gone"
        android:hint="@string/text_hint"
        android:textColor="@drawable/edittext_modified_states"
        android:background="@color/white"
         />

    <ImageView
        android:id="@+id/input_content_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:src="@drawable/drop_area" />

    <VideoView
        android:id="@+id/input_content_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:layout_below="@id/input_content_iv"
        />
</RelativeLayout>